%h2= t('users.edit')
= form_for @user, {html:{class:'form-horizontal'}} do |f|
  - if @user.errors.any?
    %ul
      - @user.errors.full_messages.each do |msg|
        %li= msg
  .control-group
    = f.label t('users.first_name'), class: 'control-label'
    .controls
      = f.text_field :first_name, :autofocus => true
  .control-group
    = f.label t('users.last_name'), class: 'control-label'
    .controls
      = f.text_field :last_name
  .control-group
    = f.label t('users.birth_date'), class: 'control-label'
    .controls
      = f.text_field :birth_date, class: 'datepicker'
  .control-group
    = f.label t('users.email'), class: 'control-label'
    .controls
      = f.email_field :email
  .control-group
    .controls
      = f.submit t('users.edit'), class: 'btn btn-medium btn-success'
= link_to t('helpers.buttons.back'), :back, class: "btn"
